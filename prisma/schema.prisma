generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Options {
  A
  B
  C
  D
}

model Teachers {
  id          Int      @id @default(autoincrement())
  name        String   @unique @db.VarChar(36)
  surname     String   @db.VarChar(36)
  phoneNumber String   @unique @map("phone_number")
  password    String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @map("updated_at")

  quizzes Quizzes[]

  @@map("teachers")
}

model Students {
  id       Int      @id @default(autoincrement())
  quizId   Int
  name     String   @db.VarChar(36)
  socketId String   @map("socket_id")
  joinedAt DateTime @default(now()) @map("joined_at")

  quiz    Quizzes   @relation(fields: [quizId], references: [id])
  answers Answers[]
  results Results?

  @@map("students")
}

model Quizzes {
  id        Int      @id @default(autoincrement())
  teacherId Int
  title     String   @unique
  roomCode  Int      @unique @map("room_code")
  isActive  Boolean  @default(false) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  questions Questions[]
  students  Students[]

  teacher Teachers @relation(fields: [teacherId], references: [id])

  @@map("quizzes")
}

model Questions {
  id            Int      @id @default(autoincrement())
  quizId        Int
  questionText  String   @map("question_text")
  optionA       Options  @map("option_a")
  optionB       Options  @map("option_b")
  optionC       Options? @map("option_c")
  optionD       Options? @map("option_d")
  correctOption Options  @map("correct_option")
  createdAt     DateTime @default(now()) @map("created_at")

  quizze  Quizzes   @relation(fields: [quizId], references: [id])
  answers Answers[]

  @@map("questions")
}

model Answers {
  id             Int      @id @default(autoincrement())
  studentId      Int      @map("student_id")
  questionId     Int      @map("question_id")
  selectedOption Options  @map("selected_option")
  isCorrect      Boolean  @map("is_correct")
  answeredAt     DateTime @map("answered_at")

  student  Students  @relation(fields: [studentId], references: [id])
  question Questions @relation(fields: [questionId], references: [id])

  @@map("answers")
}

model Results {
  id            Int      @id @default(autoincrement())
  studentId     Int      @unique @map("student_id")
  totalCorrect  Int      @map("total_correct")
  totalQuestion Int      @map("total_question")
  score         Decimal  @db.Decimal(8, 2)
  createdAt     DateTime @default(now()) @map("created_at")

  student Students @relation(fields: [studentId], references: [id])

  @@map("results")
}
