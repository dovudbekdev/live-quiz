generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum QuizType {
  INDIVIDUAL // Yakka
  TEAM // Jamoaviy
}

model Teachers {
  id                   Int       @id @default(autoincrement())
  telegramId           Int?      @map("telegram_id")
  name                 String?   @db.VarChar(36)
  surname              String?   @db.VarChar(36)
  phoneNumber          String    @unique @map("phone_number")
  password             String
  passwordResetToken   String?   @map("password_reset_token")
  passwordResetExpires DateTime? @map("password_reset_expires")
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @default(now()) @map("updated_at")

  quizzes Quizzes[]

  @@map("teachers")
}

model Students {
  id       Int      @id @default(autoincrement())
  quizId   Int      @map("quiz_id")
  name     String   @db.VarChar(36)
  socketId String   @map("socket_id")
  joinedAt DateTime @default(now()) @map("joined_at")
  isActive Boolean? @default(true)

  quiz           Quizzes          @relation(fields: [quizId], references: [id])
  results        Results?
  studentAnswers StudentAnswers[]

  @@map("students")
}

model Quizzes {
  id        Int       @id @default(autoincrement())
  teacherId Int       @map("teacher_id")
  title     String?   @unique
  type      QuizType
  roomCode  String    @unique @map("room_code")
  isActive  Boolean   @default(false) @map("is_active")
  duration  Int // quzi davom etish vaqti secondlarda qiymat kiritiladi
  startTime DateTime? @map("start_time")
  endTime   DateTime? @map("end_time")
  createdAt DateTime  @default(now()) @map("created_at")

  questions Questions[]
  students  Students[]

  teacher Teachers @relation(fields: [teacherId], references: [id])

  @@map("quizzes")
}

model Questions {
  id           Int    @id @default(autoincrement())
  quizId       Int    @map("quiz_id")
  questionText String @map("question_text")

  quizze         Quizzes          @relation(fields: [quizId], references: [id])
  answers        Answers[]
  studentAnswers StudentAnswers[]

  @@map("questions")
}

model Answers {
  id         Int     @id @default(autoincrement())
  questionId Int     @map("question_id")
  answerText String  @map("answer_text")
  isCorrect  Boolean @default(false) @map("is_correct")
  // answeredAt     DateTime @map("answered_at")

  question       Questions        @relation(fields: [questionId], references: [id])
  studentAnswers StudentAnswers[]

  @@map("answers")
}

model StudentAnswers {
  id         Int      @id @default(autoincrement())
  studentId  Int      @map("student_id")
  answerId   Int      @map("answer_id")
  questionId Int      @map("question_id")
  answeredAt DateTime @default(now()) @map("answered_at")

  student  Students  @relation(fields: [studentId], references: [id])
  answer   Answers   @relation(fields: [answerId], references: [id])
  question Questions @relation(fields: [questionId], references: [id])

  @@map("student_answers")
}

model Results {
  id            Int      @id @default(autoincrement())
  quizId        Int      @map("quiz_id")
  studentId     Int      @unique @map("student_id")
  totalCorrect  Int      @map("total_correct")
  totalQuestion Int      @map("total_question")
  score         Decimal  @db.Decimal(8, 2)
  startedAt     DateTime @map("started_at")
  finishedAt    DateTime @map("finished_at")
  createdAt     DateTime @default(now()) @map("created_at")

  student Students @relation(fields: [studentId], references: [id])

  @@map("results")
}
